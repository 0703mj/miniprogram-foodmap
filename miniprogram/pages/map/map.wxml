<map id="map" scale="16" longitude='{{longitude}}' latitude='{{latitude}}' style='height:{{windowHeight}}px' markers="{{stores}}" subkey="{{mapSubKey}}" show-compass="{{true}}" bindmarkertap="onMarkerTap">
  <cover-view class="cover" wx:if="{{showAdmin}}">
    <button class='button' open-type='getUserInfo' bindgetuserinfo='getUserInfo' bindlongpress='getOpenID' lang='zh_CN'>管理入口</button>
  </cover-view>
  <cover-view class="button show_all" bindtap="viewAll" bindlongpress='showAdmin'>查看全部</cover-view>
  <cover-view wx:if="{{!showAdmin}}">
    <navigator url='../search/search' class='cover button'>搜索</navigator>
  </cover-view>
  <block wx:if="{{!hideMe}}">
    <cover-view class="add_me" bindtap="hideMe">添加到【我的小程序】更快找到我</cover-view>
    <cover-view class="up" bindtap="hideMe"></cover-view>
  </block>
</map>